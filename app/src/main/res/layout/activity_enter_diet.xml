<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterDiet"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/showdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current date"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/greenv1"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the food that you have eaten today:"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/greenv1"
        android:layout_marginBottom="10dp"/>
    <CheckBox
        android:id="@+id/rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rice"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/dal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lentil Soup(Dal)"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bread"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/roti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roti"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egg"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/mutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mutton"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/vegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetable"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/junk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Junk Food"
        android:fontFamily="@font/poppins_regular"/>
    <CheckBox
        android:id="@+id/cother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:id="@+id/htext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter food"
        android:padding="10dp"/>
    <Button
        android:id="@+id/foodsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/round_button_orange"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"/>


</LinearLayout>