<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterExercise"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/showdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current date"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/greenv1"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select exercises that you have done today:"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/greenv1"
        android:layout_marginBottom="10dp"/>
    <CheckBox
        android:id="@+id/rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <CheckBox
        android:id="@+id/dal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <CheckBox
        android:id="@+id/bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swimming"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <CheckBox
        android:id="@+id/roti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biking/Cycling"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <CheckBox
        android:id="@+id/egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoga and Pilates"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <CheckBox
        android:id="@+id/fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Intensity Workouts (HIT)"
        android:fontFamily="@font/poppins_regular"/>
    <EditText
        android:id="@+id/htext6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/cother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:id="@+id/htext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/htext7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_editext"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        android:hint="Enter Exercise Duration in minute"
        android:padding="10dp"/>
    <Button
        android:id="@+id/foodsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/round_button_orange"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"/>


</LinearLayout>